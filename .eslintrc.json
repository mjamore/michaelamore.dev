{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "quotes": ["warn", "single"],
        "indent": ["warn", "tab"],
        "no-tabs": 0,
        "react/jsx-filename-extension": ["error", {"extensions": [".js", ".jsx"]}],
        "react/jsx-indent": 0,
        "react/prop-types": [2, { "ignore": ["children"] }],
        "import/no-extraneous-dependencies": ["warn", {"devDependencies": true}]
    }
}